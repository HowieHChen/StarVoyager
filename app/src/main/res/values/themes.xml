<resources>
    <!-- Base application theme. -->
    <style name="Theme.StarSkyVoyager" parent="android:Theme.DeviceDefault.DayNight">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/system_neutral1_50</item>
        <!-- change navigation bar color -->
        <item name="android:navigationBarColor">@android:color/system_neutral1_50</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:forceDarkAllowed">true</item>
        <item name="colorPrimary">@android:color/system_accent1_50</item>
        <item name="android:buttonTintMode">@android:color/system_accent1_50</item>
        <item name="android:windowSplashScreenBackground">@android:color/system_accent1_100</item>
        <item name="android:windowSplashScreenAnimationDuration">2500</item>
        <!--        <item name="android:windowSplashScreenAnimatedIcon">@drawable/voyager_splash_icon</item>-->
        <item name="android:windowSplashScreenBrandingImage">@drawable/voyager_background</item>
        <item name="android:colorBackground">@android:color/system_accent1_100</item>
        <item name="android:colorAccent">@android:color/system_accent1_100</item>
        <item name="android:colorButtonNormal">@android:color/system_accent1_100</item>
        <item name="android:colorControlActivated">@android:color/system_accent1_100</item>
        <item name="android:colorActivatedHighlight">@android:color/system_accent1_100</item>
        <item name="android:popupMenuStyle">@android:color/system_accent1_100</item>
        <item name="android:contextPopupMenuStyle">@android:color/system_accent1_100</item>
        <item name="android:button">@android:color/system_accent1_100</item>
        <item name="android:state_active">@android:color/system_accent1_100</item>
    </style>
</resources>